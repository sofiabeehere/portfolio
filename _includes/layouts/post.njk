---
layout: layouts/base.njk
permalink: /blog/posts/{{ title | slug }}/index.html
---
<article>
    
    <header>
        <h3>{{ date | readableDate }}</h3>
        <h1>{{ title }}</h1>
        <h2>{{ description }}</h2>
    </header>
    
    <section class="article-content">
        <img src="{{ featuredImage | url }}" alt="{{ featuredImage }}" id="featured-img"></img>
        <p>{{ content | safe }}</p>
    </section>

</article>